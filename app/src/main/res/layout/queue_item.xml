<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <ImageView
        android:id="@id/img_user"
        android:layout_width="30dp"
        android:layout_height="30dp" style="@style/user_avatar" android:src="@android:drawable/sym_def_app_icon" />

    <ImageView
        android:id="@id/img_album"
        android:layout_width="50dp"
        android:layout_height="50dp" style="@style/album_icon"  android:src="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ivory" />
        <TextView
            android:id="@id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movement" style="@style/secondaryText" />

    </LinearLayout>

</LinearLayout>
